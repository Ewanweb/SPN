@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Site.Endpoint.Areas.Profile.ViewModels
@model ProfileViewModel
@using Site.Domain.Agents
@using Site.Domain.Agents.Enums

@{
	var statusString = User.FindFirst("Status")?.Value;
	AgentStatus status = AgentStatus.InActive;

	if (!string.IsNullOrEmpty(statusString))
	{
		Enum.TryParse(statusString, out status);
	}
}
@{
    Layout = "~/Areas/Profile/Views/Shared/_Layout.cshtml";
}

