@model List<Site.Query.Agents.Dtos.AgentDto>

@{
	ViewBag.Title = "title";
	Layout = "_Layout";
}
   <!-- Page Header Start -->
    <div class="page-header">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-12">
                    <!-- Page Header Box Start -->
                    <div class="page-header-box">
                        <h1 class="text-anime-style-2" data-cursor="-opaque">تیم ما</h1>
                        <nav class="wow fadeInUp">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="./">صفحه اصلی</a></li>
                                <li class="breadcrumb-item active" aria-current="page">تیم ما</li>
                            </ol>
                        </nav>
                    </div>
                    <!-- Page Header Box End -->
                </div>
            </div>
        </div>
    </div>
    <!-- Page Header End -->

    <!-- Page Team Start -->
    <div class="page-team">
        <div class="container">
	        <div class="row">
				@foreach (var item in Model)
				{
					<div class="col-lg-4 col-md-6">
						<!-- Team Member Item Start -->
						<div class="team-member-item wow fadeInUp">
							<!-- Team Image Start -->
							<div class="team-image">
								<a asp-controller="Agent" asp-action="Single" asp-route-slug="@item.Slug" data-cursor-text="نمایش">
									<figure class="image-anime">
									<img src="@Url.Content($"~/Images/Agents/{item.ImageName}")" alt="">
									</figure>
								</a>
							</div>
							<!-- Team Image End -->

							<!-- Team Body Start -->
							<div class="team-body">
								<!-- Team Content Start -->
								<div class="team-content">
									<h3><a asp-controller="Agent" asp-action="Single" asp-route-slug="@item.Slug">@item.FullName</a></h3>
								<p>@item.Profienece</p>
								</div>
								<!-- Team Content End -->

								<!-- Team Social Icon Start -->
								<div class="team-social-icon">
									<ul>
										<li><a href="#"><i class="fa-brands fa-x-twitter"></i></a></li>
										<li><a href="#"><i class="fa-brands fa-facebook-f"></i></a></li>
										<li><a href="#"><i class="fa-brands fa-instagram"></i></a></li>
									</ul>
								</div>
								<!-- Team Social Icon End -->
							</div>
							<!-- Team Body End -->
						</div>
						<!-- Team Member Item End -->
					</div>

				}
				
	        </div>
        </div>
    </div>
    <!-- Page Team End -->