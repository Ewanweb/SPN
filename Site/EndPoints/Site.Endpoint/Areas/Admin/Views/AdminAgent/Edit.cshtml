@model Site.Endpoint.Areas.Admin.ViewModels.EditAgentViewModel

@{
	Layout = "_Layout";
}

<div class="col-md-6 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">@ViewData["Admin-Title"]</h4>
			<form class="forms-sample" asp-area="Admin" asp-controller="AdminAgent" asp-action="Edit" asp-route-slug="@Model.Slug" method="post">
				<div class="form-group">
					<label for="exampleInputUsername1">نام و نام خانوادگی</label>
					<input value="@Model.FullName" type="text" asp-for="FullName" class="form-control" id="exampleInputUsername1" placeholder="Username">
				</div>
				<div class="form-group">
					<label for="exampleInputEmail1">ایمیل</label>
					<input value="@Model.Email" asp-for="Email" type="email" class="form-control" id="exampleInputEmail1" placeholder="Email">
				</div>
				<div class="form-group">
					<label for="exampleInputEmail1">شماره موبایل</label>
					<input value="@Model.PhoneNumber" asp-for="PhoneNumber" type="text" class="form-control" id="exampleInputEmail1" placeholder="Email">
				</div>
				<div class="form-group">
					<label for="exampleInputEmail1">لینک گیتهاب</label>
					<input value="@Model.GithubLink" asp-for="GithubLink" type="text" class="form-control" id="exampleInputEmail1" placeholder="Email">
				</div>
				<div class="form-group">
					<label for="exampleInputEmail1">توضیحات</label>
					<textarea value="@Model.Description" asp-for="Description" type="text" class="form-control" id="exampleInputEmail1" placeholder="Email"></textarea>
				</div>
		
				<button type="submit" class="btn btn-primary mr-2">ارسال</button>
				<button class="btn btn-dark">Cancel</button>
			</form>
		</div>
	</div>
</div>
