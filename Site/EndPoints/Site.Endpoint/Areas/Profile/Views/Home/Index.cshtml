<!-- profile edit form -->
<div class="modal fade" id="profile-edit">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <button class="modal-close" data-bs-dismiss="modal"><i class="icofont-close"></i></button>
            <form class="modal-form">
                <div class="form-title">
                    <h3>ویرایش اطلاعات پروفایل</h3>
                </div>
                <div class="form-group">
                    <label class="form-label">عکس پروفایل</label>
                    <input class="form-control" type="file">
                </div>
                <div class="form-group">
                    <label class="form-label">نام</label>
                    <input class="form-control" type="text" value="@Model.FullName">
                </div>
                <div class="form-group">
	                <label class="form-label">ایمیل</label>
	                <input class="form-control" type="text" value="@Model.Email">
                </div>
				@status
				@if (status == AgentStatus.Active)
				{
					<div class="form-group">
						<label class="form-label">ایمیل</label>
						<input class="form-control" type="text" value="@Model.Email">
					</div>
				}

                <button class="form-btn" type="submit">ذخیره اطلاعات پروفایل</button>
            </form>
        </div>
    </div>
</div>

