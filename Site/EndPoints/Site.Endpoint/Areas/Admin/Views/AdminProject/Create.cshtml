@model Site.Endpoint.Areas.Admin.ViewModels.ProjectViewModels

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Project</h4>
<hr />
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Basic form elements</h4>
            <p class="card-description"> Basic form elements </p>
            <form class="forms-sample" method="post" asp-area="Admin" asp-controller="AdminProject" asp-action="Create" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="exampleInputName1">عنوان</label>
                    <input asp-for="Title" type="text" class="form-control" id="exampleInputName1" placeholder="عنوان">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">توضیحات</label>
                    <textarea asp-for="Description" type="text" class="form-control" id="exampleInputEmail3" placeholder="توضیحات"></textarea>
                </div>
                <div class="form-group">
                    <label>File upload</label>
                    <input type="file" asp-for="Image" class="file-upload-default">
                    <div class="input-group col-xs-12">
                        <input asp-for="Image" type="file" class="form-control file-upload-info"  placeholder="Upload Image">

                    </div>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <button class="btn btn-dark">Cancel</button>
            </form>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
