@model Site.Endpoint.Areas.Profile.ViewModels.LoginViewModel

@{
	ViewBag.Title = "title";
	Layout = "_Layout";
	var successMessage = TempData["Success"] as string;
	var errorMessage = TempData["Error"] as string;
}

@if (successMessage != null)
{
	<div class="alert alert-success" role="alert">
		@successMessage
	</div>
}
@if (errorMessage != null)
{
	<div class="alert alert-danger" role="alert">
		@errorMessage
	</div>
}

@section Styles {
	<link rel="stylesheet" href="@Url.Content("~/Profile/css/user-auth.css")">
}

<section class="user-form-part">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-12 col-sm-10 col-md-12 col-lg-12 col-xl-10">
				<div class="user-form-card">
					<div class="user-form-title">
						<h2>خوش آمدید!</h2>
						<p>عضو گرینی هستید؟با اطلاعات خود وارد شوید.</p>
					</div>
					<div class="user-form-group">
						<ul class="user-form-social">
							<li>
								<a href="#" class="facebook">
									<i class="fab fa-facebook-f"></i>ورود با استفاده از
									فیسبوک
								</a>
							</li>
							<li>
								<a href="#" class="twitter"><i class="fab fa-twitter"></i>ورود با استفاده توییتر</a>
							</li>
							<li>
								<a href="#" class="google"><i class="fab fa-google"></i>ورود با استفاده از گوگل</a>
							</li>
							<li>
								<a href="#" class="instagram">
									<i class="fab fa-instagram"></i>ورود با استفاده از
									اینستاگرام
								</a>
							</li>
						</ul>
						<div class="user-form-divider">
							<p>یا</p>
						</div>
						<form class="user-form" asp-area="Profile" asp-controller="Auth" asp-action="Login" method="post">
							<div class="form-group">
								<input asp-for="email" type="email" class="form-control" placeholder="آدرس ایمیل خود را وارد کنید">
							</div>
							<div class="form-group">
								<input asp-for="Password" type="password" class="form-control" placeholder="پسوورد خود را وارد کنید">
							</div>
							<div class="form-check mb-3">
								<input class="form-check-input" type="checkbox" value="" id="check">
								<label class="form-check-label" for="check">مرا به خاطر بسپار</label>
							</div>
							<div class="form-button">
								<button type="submit">ورود</button>
								<p>پسوورد خود را فراموش کردید؟<a >بازیابی پسوورد</a></p>
							</div>
						</form>
					</div>
				</div>
				<div class="user-form-remind">
					<p>هیچ حساب کاربری ندارید؟<a asp-area="Profile" asp-controller="Auth" asp-action="Register">ثبت نام کنید</a></p>
				</div>
				<div class="user-form-footer">
					<p>Greeny | &COPY; Copyright by <a href="#">Mrzic</a></p>
				</div>
			</div>
		</div>
	</div>
</section>
@section Scripts {
	<script src="@Url.Content("~/Profile/vendor/bootstrap/jquery-1.12.4.min.js")"></script>
	<script src="@Url.Content("~/Profile/vendor/bootstrap/popper.min.js")"></script>
	<script src="@Url.Content("~/Profile/vendor/bootstrap/bootstrap.min.js")"></script>
}